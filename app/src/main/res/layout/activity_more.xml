                app:tint="@color/white" />

            <TextView
                android:id="@+id/textShrCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:text="@string/shr_cntn"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgShrCnt"
                app:layout_constraintEnd_toStartOf="@+id/imgShrCnt"
                app:layout_constraintStart_toStartOf="@+id/titleShrCnt"
                app:layout_constraintTop_toTopOf="@+id/imgShrCnt" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cntNoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/imgNotiCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/titleNotiCnt"
