                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintStart_toStartOf="@+id/titleNotiCnt"
                app:layout_constraintTop_toBottomOf="@+id/titleNotiCnt" />

            <Switch
                android:id="@+id/nswt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-light"
                android:switchPadding="15dp"
                android:text="LatinPop"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nswt1"
                app:layout_constraintTop_toBottomOf="@+id/titleNotiCnt" />

            <Switch
                android:id="@+id/nswt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:switchPadding="10dp"
                android:text="Pop"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintEnd_toEndOf="@+id/nswt1"
                app:layout_constraintStart_toStartOf="@+id/nswt1"
                app:layout_constraintTop_toBottomOf="@+id/nswt1" />

            <Switch
                android:id="@+id/nswt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:switchPadding="10dp"
                android:text="Mod"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintEnd_toEndOf="@+id/nswt2"
                app:layout_constraintStart_toStartOf="@+id/nswt2"
                app:layout_constraintTop_toBottomOf="@+id/nswt2" />

            <Switch
                android:id="@+id/nswt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:switchPadding="10dp"
                android:text="Tiktok"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintEnd_toEndOf="@+id/nswt3"
                app:layout_constraintStart_toStartOf="@+id/nswt3"
                app:layout_constraintTop_toBottomOf="@+id/nswt3" />

            <Switch
                android:id="@+id/nswt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
