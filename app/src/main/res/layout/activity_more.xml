                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/titleShrCnt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_music"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/titleShrCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/shr_tl"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgTlShrCnt"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgShrCnt"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleShrCnt"
