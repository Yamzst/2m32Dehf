                app:layout_constraintTop_toBottomOf="@+id/nswt4" />

            <Switch
                android:id="@+id/nswt7"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginTop="18dp"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:switchPadding="10dp"
                android:text="LatinPop"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintEnd_toEndOf="@+id/nswt5"
                app:layout_constraintStart_toStartOf="@+id/nswt5"
                app:layout_constraintTop_toBottomOf="@+id/nswt5" />

            <Switch
                android:id="@+id/nswt8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:fontFamily="sans-serif-light"
                android:switchPadding="10dp"
                android:text="Salsa"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:thumbTint="@color/color_primary"
                android:track="@drawable/switch_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nswt6"
                app:layout_constraintStart_toStartOf="@+id/nswt6"
                app:layout_constraintTop_toBottomOf="@+id/nswt6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cntLinks"
