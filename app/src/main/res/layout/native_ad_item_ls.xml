<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#0DFFFFFF"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/lsImgAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lsTlAd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:lines="1"
            android:maxLines="1"
            android:text="TitleApp "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lsImgAd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lsDesAd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:text="Texto de la Ap Texto de la ApTexto de la ApTexto de la ApTexto de la Ap"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/lsTlAd"
            app:layout_constraintStart_toStartOf="@+id/lsTlAd"
            app:layout_constraintTop_toBottomOf="@+id/lsTlAd" />

        <Button
            android:id="@+id/lsBtnAd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_circle"
            android:padding="0dp"
            android:text="Open"
            android:textSize="13sp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lsIcAd"
            app:layout_constraintStart_toEndOf="@+id/lsImgAd"
            app:layout_constraintTop_toBottomOf="@+id/lsDesAd" />

        <ImageView
            android:id="@+id/lsIcAd"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lsDesAd"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>